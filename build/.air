# Config file for [Air](https://github.com/cosmtrek/air) in TOML format

root = "."
tmp_dir = "build/tmp"

[build]
cmd = "go build -o ./build/tmp/loonify ."
bin = "build/tmp/loonify"
full_bin = "APP_ENV=dev APP_USER=air ./build/tmp/loonify"
include_ext = ["go", "tpl", "tmpl", "html", "txt", "env", "air"]
include_dir = []
exclude_dir = ["assets", "tmp", "vendor", "frontend", "ent", "build", "api"]
exclude_file = []
log = "air.log"
delay = 1000 # ms
stop_on_error = true
send_interrupt = false
kill_delay = 500 # ms

[log]
time = false

[color]
main = "magenta"
watcher = "cyan"
build = "yellow"
runner = "green"

[misc]
clean_on_exit = true