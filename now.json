{
  "version": 2,
  "name": "loonify",
  "builds": [
    {
      "src": "/dist/apps/api/main.js",
      "use": "@now/node"
    },
    {
      "src": "/dist/apps/loonify/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/api/main.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/apps/loonify/assets/$1"
    },
    {
      "src": "/(.*).(js|css|ico)",
      "dest": "/dist/apps/loonify/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/loonify/index.html"
    }
  ]
}
